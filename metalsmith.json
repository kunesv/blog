{
  "metadata": {
    "title": "Oh, That Blog"
  },
  "plugins": {
    "metalsmith-collections": {
      "articles": {
        "pattern": "articles/**/*.*",
        "sortBy": "date",
        "reverse": true
      }
    },
    "metalsmith-markdown": {},
    "metalsmith-permalinks": {
      "pattern": ":title",
      "relative": false
    },
    "metalsmith-date-formatter": {
      "dates": [{
        "key": "date",
        "format": "MMM Do YYYY"
      }]
    },
    "metalsmith-layouts": {
      "engine": "handlebars",
      "directory": "src/layouts"
    },
    "metalsmith-serve": {},
    "metalsmith-watch": {}
  }
}